<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
  </head>

  <body>
    <header><%- include("./partials/header") %></header>

    <main>
      <h1>Schedule Website</h1>
      <h2><%= user.firstname %> <%= user.surname %> - <%= user.email %></h2>

      <table>
        <thead>
          <tr>
            <th>Day</th>
            <th>Start Time</th>
            <th>End Time</th>
          </tr>
        </thead>

        <tbody>
          <% schedule.forEach(schedule => { %>
          <tr>
            <td>
              <a href="/user/<%= schedule.id %>">
                <%= schedule.day_of_week %>
              </a>
            </td>
            <td>
              <a href="/user/<%= schedule.id %>">
                <%= schedule.start_time %>
              </a>
            </td>
            <td>
              <a href="/user/<%= schedule.id %>"> <%= schedule.end_time %> </a>
            </td>
          </tr>
          <% }) %>
        </tbody>

        <tfoot>
          <th colspan="2">Total Schedules</th>
          <td colspan="1"><%= schedule.length %></td>
        </tfoot>
      </table>
    </main>

    <footer><%- include("./partials/footer") %></footer>
  </body>
</html>
