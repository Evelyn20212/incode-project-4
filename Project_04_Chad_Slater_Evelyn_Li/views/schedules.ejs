<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
  </head>

  <body>
    <header><%- include("./partials/header") %></header>

    <main>
      <h1>Schedule Website</h1>
      <h2>Schedules</h2>

      <table>
        <thead>
          <tr>
            <th>First Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Day</th>
            <th>Start Time</th>
            <th>End Time</th>
          </tr>
        </thead>

        <tbody>
          <% schedule.forEach(schedule => { %>
          <tr>
            <td>
              <a href="/user/<%= schedule.user_id %>">
                <%= schedule.firstname %>
              </a>
            </td>
            <td>
              <a href="/user/<%= schedule.user_id %>">
                <%= schedule.surname %>
              </a>
            </td>
            <td>
              <a href="/user/<%= schedule.user_id %>">
                <%= schedule.email %>
              </a>
            </td>
            <td>
              <a href="/user/<%= schedule.user_id %>">
                <%= schedule.day_of_week %>
              </a>
            </td>
            <td>
              <a href="/user/<%= schedule.user_id %>">
                <%= schedule.start_time %>
              </a>
            </td>
            <td>
              <a href="/user/<%= schedule.user_id %>">
                <%= schedule.end_time %>
              </a>
            </td>
          </tr>
          <% }) %>
        </tbody>

        <tfoot>
          <tr>
            <td colspan="5">Total Schedules</td>
            <td colspan="1"><%= schedule.length %></td>
          </tr>
        </tfoot>
      </table>
    </main>

    <footer><%- include("./partials/footer") %></footer>
  </body>
</html>
