<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
  </head>

  <body>
    <header><%- include("./partials/header") %></header>

    <main>
      <h1>Users Website</h1>
      <h2>Users</h2>

      <table>
        <thead>
          <tr>
            <% for (const property in users[0]) { %>
            <th><%= capitalize(property) %></th>
            <% } %>
          </tr>
        </thead>

        <tbody>
          <% users.forEach(users => { %>
          <tr>
            <% for (const property in users) { %>
            <td><%= users[property] %></td>
            <% } %>
          </tr>
          <% }) %>
        </tbody>

        <tfoot>
          <th colspan="<%= Object.keys(users[0]).length - 1 %>">
            Total Users
          </th>
          <td colspan="1"><%= users.length %></td>
        </tfoot>
      </table>
    </main>

    <footer><%- include("./partials/footer") %></footer>
  </body>
</html>
